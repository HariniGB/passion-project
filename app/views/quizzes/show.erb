<main id="quiz_page">
  <div>
    <h3> The topic is <%= @topic.topic_name %></h3>
  </div>
  <div id = "wrapper">
    <form id= "answer_quiz" action='/topic/<%= @topic.id %>/quiz/<%= @quiz.id %>/guess' method='post'>
        <p><%= @quiz.question %></p><br><br>
        <div class="options">
        <% @quiz.options.each do |opt| %>
          <p><input type= "radio" name = 'guess_body' value = '<%= opt.option %>'> <label><%= opt.option %></label></p>
          <br><br>
        <% end %>
        <input id="quiz_submit" type="submit" value="Submit">
      </div>
    </form>
    <%= erb :'games/_end_game', layout: false%>
  </div>
  <div id= "show-error">
      <%= erb :'_errors' %>
  </div>
</main>
